								    <viz.feeds:FeedItem id='valueAxisFeed2' uid="valueAxis" type="Measure" values="Humidity"/>
									<viz.feeds:FeedItem id='categoryAxisFeed' uid="categoryAxis" type="Dimension" values="Time"/>
								</viz:feeds>
